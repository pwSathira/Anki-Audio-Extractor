{
  "name": "anki-audio-extractor",
  "version": "1.1.1 ",
  "description": "Extract audio from Anki cards",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run generate-icons && electron-builder",
    "build:mac": "npm run build -- --mac",
    "build:win": "npm run build -- --win",
    "build:linux": "npm run build -- --linux",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "author": {
    "name": "Sathira Williams",
    "email": "sathira.williams@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.33.2"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "express": "^5.1.0"
  },
  "build": {
    "appId": "com.pwsathira.ankiaudioextractor",
    "productName": "Anki Audio Extractor",
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "files": [
      "node_modules/**/*",
      "src/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
