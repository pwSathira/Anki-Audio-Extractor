{
  "name": "anki-audio-extractor",
  "version": "1.0.0",
  "description": "Anki Audio Extractor",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run generate-icons && electron-builder",
    "build:mac": "npm run generate-icons && electron-builder --mac",
    "build:win": "npm run generate-icons && electron-builder --win",
    "build:linux": "npm run generate-icons && electron-builder --linux",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "author": {
    "name": "pwSathira",
    "email": "sathira.williams@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.33.2"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "express": "^5.1.0"
  },
  "build": {
    "appId": "com.ankiaudio.extractor",
    "productName": "Anki Audio Extractor",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "identity": null
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
